<compare-header inline-template>
  <div :class="{'fixed pt3': offscreen}" class="m-compare__header b--black-10 bb bg-white flex items-center justify-between top-0 pb3 z-max">
    <div>
      <p aria-hidden="true" class="bg-black-10 br-100 dib f6 fw6 mv0 pa1">BS</P>
      <p class="dib mv0">Bart made
        <strong>72 requests</strong>
      </p>
      <p class="f6 mt2 mb0">You have reviewed
